<a href="/post/{{id}}">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{title}}</h2>
      <span>Posted by {{user.username}} on {{format_date created_at}}</span><!---->
    </div>
    <div class="card-body">
      <span>{{content}}</span>
    </div>
  </article>
</a>